@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<br />
<h3 style="font-weight:400; text-align:center">Client List<br /> @DateTime.Now.ToString("yyyy-MM-dd")</h3>

<div class="card-deck">
    @foreach (var employee in Model)
    {
        <div class="card m-3" style="min-width:18rem; max-width:30.5%;">

            <div class="card-header text-center">
                <h3 style="font-weight:400">@employee.Name</h3>
            </div>


            @*@if (@employee.Department == Dept.NFL)
                {
                    <img class="card-img-top" src="~/images/rocket.png" asp-append-version="true" />
                }
                else
                {
                    <img class="card-img-top" src="~/images/ms-logo.png" asp-append-version="true" />
                }*@

            <img class="card-img-top" src="~/images/rocket.png" asp-append-version="true" />

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-outline-secondary m-1 btn-sm">View</a>

                <a asp-controller="home" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-outline-primary m-1 btn-sm">Edit</a>

                <a asp-controller="home" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-outline-danger m-1 btn-sm">Delete</a>
            </div>
        </div>
    }
</div>